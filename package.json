{
  "name": "@midcontract/protocol",
  "version": "1.0.0-rc.0",
  "description": "Crypto payment protocol",
  "homepage": "https://github.com/midcontract/protocol",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midcontract/protocol.git"
  },
  "license": "MIT",
  "author": "Midcontract",
  "files": [
    "chain/evm/Greeter.abi.json",
    "chain/evm/IGreeter.sol"
  ],
  "scripts": {
    "build": "forge build && yarn extract:abi",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "canary": "yarn build && yarn version:canary && npm publish --access public --tag canary",
    "coverage": "forge coverage --match-contract Unit",
    "deploy:blast": "bash -c 'source .env && forge script DeployBlast --rpc-url $BLAST_RPC --broadcast --private-key $BLAST_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:sepolia": "bash -c 'source .env && forge script DeploySepolia --rpc-url $SEPOLIA_RPC --broadcast --private-key $SEPOLIA_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "extract:abi": "echo 'TODO extract:abi'",
    "fix": "sort-package-json && forge fmt && yarn lint:sol-tests --fix && yarn lint:sol-logic --fix",
    "postinstall": "forge remappings > remappings.txt",
    "lint": "yarn lint:sol-tests && yarn lint:sol-logic && forge fmt --check",
    "lint:commit": "commitlint",
    "lint:natspec": "natspec-smells --include 'chain/evm/contract'",
    "lint:sol-logic": "solhint -c .solhint.json 'chain/evm/contract/**/*.sol'",
    "lint:sol-tests": "solhint -c .solhint.tests.json 'chain/evm/test/**/*.sol'",
    "pre-commit": "yarn build && lint-staged",
    "prepare": "husky install",
    "test": "forge test -vvv",
    "test:integration": "forge test --match-contract Integration -vvv",
    "test:unit": "forge test --match-contract Unit -vvv",
    "test:unit:deep": "FOUNDRY_FUZZ_RUNS=5000 yarn test:unit",
    "version:canary": "yarn version --new-version $(jq -r .version package.json)-$(git log -n 1 --pretty=format:%h) --no-git-tag-version"
  },
  "commitlint": {
    "extends": [
      "./@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "*.sol": "solhint --fix 'chain/**/*.sol",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@defi-wonderland/natspec-smells": "1.0.3",
    "ds-test": "github:dapphub/ds-test#e282159",
    "forge-std": "github:foundry-rs/forge-std#v1.7.6",
    "husky": ">=8",
    "lint-staged": ">=10",
    "solhint": "github:solhint-community/solhint-community#v4.0.0-rc01",
    "sort-package-json": "1.53.1"
  }
}
